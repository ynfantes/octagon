<div class="widget-body no-padding">
<!-- content goes here -->
<!-- table responsive -->
<div class="table-responsive no-margin">

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Inmueble</th>
            <th>Fecha</th>
            <th class="text-align-center">Hora</th>
            <th class="text-align-center hidden-xs">Ver</th>
        </tr>
    </thead>
    <tbody>
        {% if lista is empty %}
            <tr>
                <td colspan="4" class="text-align-center"><i>No existen asambleas registradas</i></td>
            </tr>
        {% else %}
        {% for item in lista %}
        <tr>
            <td><a href="javascript:void(0);">{{item.nombre_inmueble}}</a></td>
            <td>{{item.fecha| date("d-m-Y")}}</td>
            <td class="text-align-center hidden-xs">{{item.fecha | date("g:iA")}}</td>
            <td class="text-align-center">
            <div class="btn-group display-inline pull-right text-align-left hidden-tablet">
                <button class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-cog fa-lg"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-xs pull-right">
                    <li>
                    {% if item.convocatoria %}
                        <a href="{{constant('ROOT')}}img/asambleas/convocatoria/{{item.archivo_soporte}}" target="_blank"><i class="fa fa-file fa-lg fa-fw txt-color-greenLight"></i> Convocatoria</a>
                    {% else %}
                    Convocatoria No publicada
                    {% endif %}
                    </li>
                    {% if item.acta %}
                    <li>
                        <a href="{{constant('ROOT')}}enlinea/asambleas/verActa/{{item.archivo_acta}}" target="_blank"><i class="fa fa-file fa-lg fa-fw txt-color-greenLight"></i> Acta</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
            </td>
        </tr>
        {% endfor %}
        {% endif %}
    </tbody>
</table>

</div>
<!-- end table responsive-->

